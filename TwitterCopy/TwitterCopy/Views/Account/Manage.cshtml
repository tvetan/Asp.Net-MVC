@section ListItems{
    <div class="module">
        <div class="module-inner">
            <h2>Password</h2>
            <p class="subheader">Change your password or recover your current one.</p>

            <div class="row">
                <div class="col-md-12">
                    @if (ViewBag.HasLocalPassword)
                    {
                        @Html.Partial("_ChangePasswordPartial")
                    }
                    else
                    {
                        @Html.Partial("_SetPasswordPartial")
                    }

                    <section id="externalLogins">
                        @Html.Action("RemoveAccountList")
                        @Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })
                    </section>
                </div>
            </div>
        </div>
    </div>
}

@section NavLinks{
    <div class="module">
        <ul class="nav nav-pills nav-stacked">
            <li>
                @Html.ActionLink("Password", "Settings", "Account")
            </li>
            <li class="active">
                @Html.ActionLink("Password", "Manage", "Account")
            </li>
            <li>
                @Html.ActionLink("Profile", "Profile", "Account")
            </li>
        </ul>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
